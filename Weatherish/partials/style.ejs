.spacer {
    flex: 1;
  }
	
  body {
	background-color: #ebebeb;
  
  }
  .card {
	border: none;
	color:#000;
	display:flex;
	flex-direction:column;
	  
  }
  .row {
	  margin-bottom: 10px;
  }
  
  .card-footer {
	  background-color: #fff;
	  border: none;
  }
  
  .col-md-6 {
	background-color: #fff;
  
  }
  .card-title {
	font-weight:700;
	line-height:1.11;
	font-size:18px;
	text-transform:uppercase
	  
  }
  .card-subtitle {
	opacity:.6;
	font-size:14px;
	font-weight:700;
	line-height:1.43;
	margin-bottom:16px
	  
  }
 
  
  
  .toolbar {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 60px;
    display: flex;
    align-items: center;
    background-color: #1976d2;
    color: white;
    font-weight: 600;
  }

  .toolbar img {
    margin: 0 16px;
  }

  .toolbar #logo {
    height: 40px;
    margin: 0 16px;
  }

  .toolbar #logo:hover {
    opacity: 0.8;
  }

  .content {
    display: flex;
    margin: 82px auto 32px;
    padding: 0 16px;
    max-width: 960px;
    flex-direction: column;
    align-items: center;
  }

  h1 {
	text-align:center;
	display: inline;
  }

  

  a{
    color: #1976d2;
    text-decoration: none;
  }
  
